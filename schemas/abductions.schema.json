{
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "summary", "datetime", "geometry", "personid"],
    "properties": {
      "id": { "type": "integer" },
      "type": { "type": "string", "enum": ["abduction"] },
      "summary": { "type": "string" },
      "datetime": {
        "oneOf": [
          {
            "type": "string",
            "format": "date"
          },
          { "type": "string", "format": "date-time" }
        ]
      },
      "recovered": {
        "type": "boolean",
        "default": false
      },
      "recovery_datetime": {
        "type": "string",
        "format": "date"
      },
      "recovery_state": {
        "type": "string",
        "enum": ["alive", "dead"]
      },
      "personid": {
        "oneOf": [
          {
            "type": "array",
            "items": {
              "oneOf": [
                { "type": "integer" },
                {
                  "$ref": "./person.schema.json"
                }
              ]
            }
          },
          { "type": "null" }
        ]
      },
      "sources": {
        "type": "array",
        "items": {
          "type": "string",
          "format": "uri-reference"
        }
      },
      "geometry": {
        "oneOf": [
          {
            "$ref": "https://geojson.org/schema/Point.json"
          },
          { "$ref": "https://geojson.org/schema/MultiPoint.json" }
        ]
      },
      "recovery_geometry": {
        "$ref": "./geojson/Point.schema.json"
      },
      "recovery_summary": {
        "type": "string"
      },
      "authorititive": { "type": "boolean", "default": false }
    }
  }
}
