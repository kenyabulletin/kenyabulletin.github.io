{
  "type": "object",
  "required": ["features", "type"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["FeatureCollection"]
    },
    "features": {
      "type": "array",
      "uniqueItems": false,
      "items": {
        "type": "object",
        "required": ["geometry", "type", "properties"],
        "properties": {
          "properties": {
            "type": "object",
            "required": ["datetime", "summary"],
            "properties": {
              "datetime": {
                "oneOf": [
                  {
                    "type": "string",
                    "format": "date-time"
                  },
                  { "type": "string", "format": "date" }
                ]
              },
              "summary": {
                "type": "string"
              },
              "sources": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "uri-reference"
                }
              }
            }
          },
          "geometry": {
            "$ref": "./geojson/Point.schema.json"
          },
          "type": {
            "type": "string",
            "enum": ["Feature"]
          }
        }
      }
    }
  }
}
