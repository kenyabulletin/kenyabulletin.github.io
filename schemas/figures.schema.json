{
  "type": "array",
  "items": {
    "allOf": [
      { "$ref": "./person.schema.json" },
      {
        "type": "object",
        "required": ["name", "occupation"],
        "properties": {
          "id": { "type": "integer" },
          "education": {
            "type": "array",
            "default": [],
            "items": {
              "type": "object",
              "required": ["from", "to", "institution", "programme"],
              "properties": {
                "from": { "type": "integer" },
                "to": { "type": "integer" },
                "institution": { "type": "string" },
                "programme": { "type": "string" }
              }
            }
          },
          "work": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["from", "to", "institution", "role"],
              "properties": {
                "from": {
                  "type": "integer"
                },
                "to": { "type": "integer" },
                "institution": { "type": "string" },
                "role": {
                  "type": "string"
                }
              }
            }
          },
          "sightings": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["geometry", "reason", "sources", "datetime"],
              "properties": {
                "geometry": {
                  "$ref": "./geojson/Point.schema.json"
                },
                "reason": {
                  "type": "string"
                },
                "sources": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uri-reference"
                  }
                },
                "datetime": {
                  "oneOf": [
                    { "type": "string", "format": "date" },
                    { "type": "string", "format": "date-time" }
                  ]
                }
              }
            }
          }
        }
      }
    ]
  }
}
