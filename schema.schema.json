{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$defs": {
    "person": {
      "type": "object",
      "required": ["name", "occupation"],
      "properties": {
        "occupation": {
          "type": "string",
          "examples": ["politician", "activist"]
        },
        "name": {
          "type": "string"
        },
        "dob": {
          "type": "string",
          "format": "date"
        },
        "dod": {
          "type": "string",
          "format": "date"
        },
        "thumbnail": {
          "type": "string",
          "format": "uri-reference"
        }
      }
    },
    "pointgeometry": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "$id": "https://geojson.org/schema/Point.json",
      "title": "GeoJSON Point",
      "type": "object",
      "required": ["type", "coordinates"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Point"]
        },
        "coordinates": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "number"
          }
        },
        "bbox": {
          "type": "array",
          "minItems": 4,
          "items": {
            "type": "number"
          }
        }
      }
    },
    "multipointgeometry": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "$id": "https://geojson.org/schema/MultiPoint.json",
      "title": "GeoJSON MultiPoint",
      "type": "object",
      "required": ["type", "coordinates"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["MultiPoint"]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "number"
            }
          }
        },
        "bbox": {
          "type": "array",
          "minItems": 4,
          "items": {
            "type": "number"
          }
        }
      }
    }
  },
  "allOf": [
    {
      "type": "object",
      "required": ["type", "values"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["abductions", "events", "persons"]
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": { "const": "abductions" }
        }
      },
      "then": {
        "required": ["values"],
        "properties": {
          "values": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["summary", "datetime", "recovered", "persons"],
              "additionalProperties": false,
              "properties": {
                "summary": {
                  "type": "string"
                },
                "datetime": {
                  "oneOf": [
                    {
                      "type": "string",
                      "format": "date"
                    },
                    {
                      "type": "string",
                      "format": "date-time"
                    }
                  ]
                },
                "recovered": {
                  "type": "boolean",
                  "default": false
                },
                "recovery_datetime": {
                  "type": "string",
                  "format": "date"
                },
                "recovery_state": {
                  "type": "string",
                  "enum": ["alive", "dead"]
                },
                "persons": {
                  "oneOf": [
                    {
                      "type": "array",
                      "items": {
                        "oneOf": [
                          { "type": "integer" },
                          { "$ref": "#/$defs/person" }
                        ]
                      }
                    }
                  ]
                },
                "sources": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uri-reference"
                  }
                },
                "geometry": {
                  "oneOf": [
                    {
                      "$ref": "#/$defs/pointgeometry"
                    },
                    {
                      "$ref": "#/$defs/multipointgeometry"
                    }
                  ]
                },
                "recovery_geometry": {
                  "$ref": "#/$defs/pointgeometry"
                },
                "recovery_summary": {
                  "type": "string"
                }
              },
              "allOf": [
                {
                  "if": {
                    "properties": {
                      "recovered": { "const": true }
                    }
                  },
                  "then": {
                    "required": [
                      "recovery_datetime",
                      "recovery_state",
                      "recovery_summary"
                    ]
                  }
                }
              ]
            }
          }
        }
      },
      "else": {
        "if": {
          "properties": {
            "type": { "const": "persons" }
          }
        },
        "then": {
          "properties": {
            "values": {
              "type": "array",
              "items": {
                "allOf": [
                  { "$ref": "#/$defs/person" },
                  {
                    "type": "object",
                    "required": ["name", "occupation"],
                    "properties": {
                      "education": {
                        "type": "array",
                        "default": [],
                        "items": {
                          "type": "object",
                          "required": [
                            "from",
                            "to",
                            "institution",
                            "programme"
                          ],
                          "properties": {
                            "from": { "type": "integer" },
                            "to": { "type": "integer" },
                            "institution": { "type": "string" },
                            "programme": { "type": "string" }
                          }
                        }
                      },
                      "work": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "required": ["from", "to", "institution", "role"],
                          "properties": {
                            "from": {
                              "type": "integer"
                            },
                            "to": { "type": "integer" },
                            "institution": { "type": "string" },
                            "role": {
                              "type": "string"
                            }
                          }
                        }
                      },
                      "sightings": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "required": [
                            "geometry",
                            "reason",
                            "sources",
                            "datetime"
                          ],
                          "properties": {
                            "geometry": {
                              "$ref": "#/$defs/pointgeometry"
                            },
                            "reason": {
                              "type": "string"
                            },
                            "sources": {
                              "type": "array",
                              "items": {
                                "type": "string",
                                "format": "uri-reference"
                              }
                            },
                            "datetime": {
                              "oneOf": [
                                { "type": "string", "format": "date" },
                                { "type": "string", "format": "date-time" }
                              ]
                            }
                          }
                        }
                      }
                    }
                  }
                ]
              }
            }
          }
        },
        "else": {
          "properties": {
            "values": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["geometry", "summary", "datetime", "sources"],
                "additionalProperties": false,
                "properties": {
                  "geometry": {
                    "oneOf": [
                      {
                        "$ref": "#/$defs/pointgeometry"
                      },
                      {
                        "$ref": "#/$defs/multipointgeometry"
                      }
                    ]
                  },
                  "summary": {
                    "type": "string"
                  },
                  "datetime": {
                    "oneOf": [
                      { "type": "string", "format": "date" },
                      { "type": "string", "format": "date-time" }
                    ]
                  },
                  "sources": {
                    "type": "array",
                    "items": { "type": "string", "format": "uri-reference" }
                  },
                  "persons": {
                    "type": "array",
                    "items": {
                      "oneOf": [
                        { "type": "integer" },
                        { "$ref": "#/$defs/person" }
                      ]
                    }
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}
